{
  "testEnvironment": "node",
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "**/*.js",
    "!**/node_modules/**",
    "!**/tests/**",
    "!**/coverage/**"
  ],
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "setupFilesAfterEnv": ["./tests/setup.js"],
  "testTimeout": 10000
}
